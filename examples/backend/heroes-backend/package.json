{
  "name": "heroes-backend",
  "version": "1.0.0",
  "description": "Server Examples For Keycloak Angular, just for demo purposes",
  "main": "./src/app.js",
  "scripts": {
    "start": "node_modules/.bin/nodemon src/app.js --exec babel-node --presets env",
    "test": "node_modules/.bin/jest",
    "coverage": "node_modules/.bin/jest --collectCoverageFrom=src/**.spec.js --coverage",
    "build": "node_modules/.bin/babel lib -d dist --presets es2015,stage-2",
    "serve": "node dist/app.js"
  },
  "author": "Mauricio Gemelli Vigolo",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "file-matcher": "^1.3.0",
    "keycloak-connect": "^6.0.1",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-express": "^4.0.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.8.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js",
    "ignore": [
      "*.spec.ts"
    ],
    "delay": "3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "verbose": true,
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".spec.js$",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "coverageDirectory": "./coverage"
  }
}
